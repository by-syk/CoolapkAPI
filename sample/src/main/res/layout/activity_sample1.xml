<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/et_query"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:hint="@string/query_hint"
            android:imeOptions="actionDone"
            android:inputType="text" />

        <Button
            android:id="@+id/bt_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/unit_padding"
            android:layout_marginStart="@dimen/unit_padding"
            android:onClick="onMyClick"
            android:text="@string/query" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:fillViewport="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="1"
            android:stretchColumns="1"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TableRow>

                <TextView
                    android:text="@string/title_id"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_marginLeft="@dimen/unit_padding"
                    android:layout_marginStart="@dimen/unit_padding"
                    android:textSize="@dimen/text_size" />

            </TableRow>

            <TableRow android:layout_marginTop="@dimen/unit_padding">

                <TextView
                    android:text="@string/title_pkg_name"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_pkg_name"
                    android:layout_marginLeft="@dimen/unit_padding"
                    android:layout_marginStart="@dimen/unit_padding"
                    android:textSize="@dimen/text_size" />

            </TableRow>

            <TableRow android:layout_marginTop="@dimen/unit_padding">

                <TextView
                    android:text="@string/title_app_name"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_app_name"
                    android:layout_marginLeft="@dimen/unit_padding"
                    android:layout_marginStart="@dimen/unit_padding"
                    android:textSize="@dimen/text_size" />

            </TableRow>

            <TableRow android:layout_marginTop="@dimen/unit_padding">

                <TextView
                    android:text="@string/title_ver_name"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_ver_name"
                    android:layout_marginLeft="@dimen/unit_padding"
                    android:layout_marginStart="@dimen/unit_padding"
                    android:textSize="@dimen/text_size" />

            </TableRow>

            <TableRow android:layout_marginTop="@dimen/unit_padding">

                <TextView
                    android:text="@string/title_ver_code"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_ver_code"
                    android:layout_marginLeft="@dimen/unit_padding"
                    android:layout_marginStart="@dimen/unit_padding"
                    android:textSize="@dimen/text_size" />

            </TableRow>

            <TableRow android:layout_marginTop="@dimen/unit_padding">

                <TextView
                    android:text="@string/title_apk_size"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_apk_size"
                    android:layout_marginLeft="@dimen/unit_padding"
                    android:layout_marginStart="@dimen/unit_padding"
                    android:textSize="@dimen/text_size" />

            </TableRow>

            <TableRow android:layout_marginTop="@dimen/unit_padding">

                <TextView
                    android:text="@string/title_title"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_marginLeft="@dimen/unit_padding"
                    android:layout_marginStart="@dimen/unit_padding"
                    android:textSize="@dimen/text_size" />

            </TableRow>

            <TableRow android:layout_marginTop="@dimen/unit_padding">

                <TextView
                    android:text="@string/title_description"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_marginLeft="@dimen/unit_padding"
                    android:layout_marginStart="@dimen/unit_padding"
                    android:textSize="@dimen/text_size" />

            </TableRow>

            <TableRow android:layout_marginTop="@dimen/unit_padding">

                <TextView
                    android:text="@string/title_developer"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_developer"
                    android:layout_marginLeft="@dimen/unit_padding"
                    android:layout_marginStart="@dimen/unit_padding"
                    android:textSize="@dimen/text_size" />

            </TableRow>

            <TableRow android:layout_marginTop="@dimen/unit_padding">

                <TextView
                    android:text="@string/title_score"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_marginLeft="@dimen/unit_padding"
                    android:layout_marginStart="@dimen/unit_padding"
                    android:textSize="@dimen/text_size" />

            </TableRow>

            <TableRow android:layout_marginTop="@dimen/unit_padding">

                <TextView
                    android:text="@string/title_vote"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_vote"
                    android:layout_marginLeft="@dimen/unit_padding"
                    android:layout_marginStart="@dimen/unit_padding"
                    android:textSize="@dimen/text_size" />

            </TableRow>

            <TableRow android:layout_marginTop="@dimen/unit_padding">

                <TextView
                    android:text="@string/title_follow"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_follow"
                    android:layout_marginLeft="@dimen/unit_padding"
                    android:layout_marginStart="@dimen/unit_padding"
                    android:textSize="@dimen/text_size" />

            </TableRow>

            <TableRow android:layout_marginTop="@dimen/unit_padding">

                <TextView
                    android:text="@string/title_comment"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_marginLeft="@dimen/unit_padding"
                    android:layout_marginStart="@dimen/unit_padding"
                    android:textSize="@dimen/text_size" />

            </TableRow>

            <TableRow android:layout_marginTop="@dimen/unit_padding">

                <TextView
                    android:text="@string/title_download"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_download"
                    android:layout_marginLeft="@dimen/unit_padding"
                    android:layout_marginStart="@dimen/unit_padding"
                    android:textSize="@dimen/text_size" />

            </TableRow>

            <TableRow android:layout_marginTop="@dimen/unit_padding">

                <TextView
                    android:text="@string/title_release"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_release"
                    android:layout_marginLeft="@dimen/unit_padding"
                    android:layout_marginStart="@dimen/unit_padding"
                    android:textSize="@dimen/text_size" />

            </TableRow>

            <TableRow android:layout_marginTop="@dimen/unit_padding">

                <TextView
                    android:text="@string/title_update"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_update"
                    android:layout_marginLeft="@dimen/unit_padding"
                    android:layout_marginStart="@dimen/unit_padding"
                    android:textSize="@dimen/text_size" />

            </TableRow>

        </TableLayout>

    </ScrollView>

</LinearLayout>